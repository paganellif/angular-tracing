{
  "compileOnSave": false,
  "compilerOptions": {
    "downlevelIteration": true,
    "importHelpers": true,
    "sourceMap": true,
    "inlineSources": true,
    "declaration": false,
    "module": "esnext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "target": "es2015",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2018", "dom"],
    "baseUrl": ".",
    "paths": {
      "@angular-tracing/core": ["libs/core/src/index.ts"],
      "@angular-tracing/zipkin": ["libs/zipkin/src/index.ts"],
      "os": ["node_modules/empty-module/index.js"],
      "node-fetch": ["node_modules/empty-module/index.js"],
      "zipkin": ["node_modules/zipkin/dist/zipkin.js"]
    }
  },
  "angularCompilerOptions": {
    "strictMetadataEmit": true,
    "skipTemplateCodegen": true,
    "fullTemplateTypeCheck": true,
    "debug": true
  },
  "exclude": ["node_modules", "tmp"]
}
